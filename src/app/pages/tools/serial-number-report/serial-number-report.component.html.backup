<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-12">
      
      <!-- Page Header with Context -->
      <div class="mb-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <div class="d-flex align-items-center">
            <div class="bg-primary bg-gradient rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
              <i class="mdi mdi-format-list-numbered text-white fs-4"></i>
            </div>
            <div>
              <h2 class="mb-1 text-primary">Serial Number Report</h2>
              <p class="text-muted mb-0">Track and analyze serial number usage across templates and categories</p>
            </div>
          </div>
          <div class="d-flex gap-2">
            <button 
              type="button" 
              class="btn btn-success"
              (click)="open(addSerialModal)"
              title="Add new serial numbers">
              <i class="mdi mdi-plus me-2"></i>Add Serial Numbers
            </button>
            <button 
              type="button" 
              class="btn btn-primary"
              (click)="exportToCSV()"
              title="Export serial number data">
              <i class="mdi mdi-download me-2"></i>Export CSV
            </button>
          </div>
        </div>
        
        <div class="alert alert-primary border-primary border-opacity-25 bg-primary bg-opacity-10" role="alert">
          <div class="d-flex align-items-start">
            <i class="mdi mdi-information text-primary me-3 mt-1 fs-5"></i>
            <div>
              <h6 class="alert-heading text-primary mb-2">Serial Number Overview</h6>
              <p class="mb-0">
                Serial number reports provide comprehensive tracking of generated numbers across all <strong>templates and usage categories</strong>. 
                Monitor availability, usage patterns, and generate detailed exports for compliance reporting.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-header">
          <div class="d-flex align-items-center flex-wrap gap-3">
            <div class="form-icon">
              <input type="search" class="form-control form-control-icon" style="width:300px"
                placeholder="Search serial numbers...">
              <i class="mdi mdi-magnify"></i>
            </div>
            
            <!-- Filters -->
            <select class="form-select" style="width:150px" [(ngModel)]="selectedTemplate" (ngModelChange)="applyFilters()">
              <option value="">All Templates</option>
              <option *ngFor="let template of templates" [value]="template.template_id">
                {{ template.name }}
              </option>
            </select>
            
            <select class="form-select" style="width:140px" [(ngModel)]="selectedStatus" (ngModelChange)="applyFilters()">
              <option value="">All Status</option>
              <option value="used">Used</option>
              <option value="available">Available</option>
            </select>
            
            <button class="btn btn-outline-secondary" (click)="clearFilters()" title="Clear filters">
              <i class="mdi mdi-filter-remove me-1"></i>Clear
            </button>
            
            <div class="ms-auto">
              <div class="d-flex align-items-center">
                <div class="me-4 d-flex gap-4 small text-muted">
                  <span>
                    <i class="mdi mdi-database text-info me-1"></i>
                    <strong>{{serialNumbers?.length || 0}}</strong> Total
                  </span>
                  <span>
                    <i class="mdi mdi-format-list-numbered text-primary me-1"></i>
                    <strong>Serial Numbers</strong>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card-body p-0">
          <ng-container *ngIf="serialNumbers?.length; else noRecords">
            <ag-grid-angular [gridOptions]="gridOptions" class="ag-theme-quartz no-border"
              style="width: 100%;height: calc(100vh - 300px);"
              [columnDefs]="columnDefs"
              [rowData]="serialNumbers"
              [pagination]="true"
              [paginationPageSize]="50"
              [animateRows]="true"
              [enableCellTextSelection]="true"
              [context]="{ component: this }"
              (gridReady)="onGridReady($event)">
            </ag-grid-angular>
          </ng-container>
          <ng-template #noRecords>
            <div class="d-flex flex-column align-items-center justify-content-center p-5">
              <div class="text-center" style="max-width: 500px;">
                <div class="mb-4">
                  <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px;">
                    <i class="mdi mdi-format-list-numbered text-primary" style="font-size: 3rem;"></i>
                  </div>
                </div>
                <h4 class="text-body-emphasis mb-3">No Serial Numbers Found</h4>
                <p class="text-muted mb-4">
                  No serial numbers match your current filters. Try adjusting your criteria or check your template selections.
                </p>
              </div>
            </div>
          </ng-template>
        </div>
        
        <div class="card-footer bg-light text-muted d-flex align-items-center">
          <i class="mdi mdi-information me-2"></i>
          <span>Click on serial numbers to view barcode or copy to clipboard for tracking purposes</span>
          <div class="ms-auto">
            <small>Total: {{serialNumbers?.length || 0}} serial numbers</small>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>

<!-- Barcode Modal -->
<div class="modal fade" [class.show]="showBarcodeModal" [style.display]="showBarcodeModal ? 'block' : 'none'" 
     tabindex="-1" role="dialog" *ngIf="showBarcodeModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title">Barcode Preview</h6>
        <button type="button" class="btn-close" (click)="hideBarcode()"></button>
      </div>
      <div class="modal-body text-center">
        <div class="p-4">
          <ngx-barcode6 
            [bc-value]="selectedBarcodeSerial" 
            [bc-display-value]="true" 
            [bc-height]="80" 
            [bc-width]="2"
            [bc-font-size]="18" 
            [bc-margin-left]="0" 
            [bc-text-align]="'center'" 
            [bc-background]="'white'">
          </ngx-barcode6>
        </div>
        <div class="mt-3">
          <button class="btn btn-outline-primary" (click)="copyToClipboard(selectedBarcodeSerial)">
            <i class="mdi mdi-content-copy me-1"></i>Copy Serial Number
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal-backdrop fade" [class.show]="showBarcodeModal" *ngIf="showBarcodeModal"></div>

