// Zoom indicator
.zoom-indicator {
  position: fixed;
  bottom: 10px;
  right: 10px;
  z-index: 1040;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.7rem;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
  
  &.visible {
    opacity: 1;
  }
  
  &.zoom-changed {
    background: rgba(0, 123, 255, 0.8);
    opacity: 1;
    animation: zoomPulse 2s ease-out;
  }
}

@keyframes zoomPulse {
  0% {
    transform: scale(1);
    opacity: 1;
